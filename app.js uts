const express = require('express');
const session = require('express-session');
const app = express();
const db = require('./config/db');
const path = require('path');

const PORT = 3000; 


//middleware
app.use(express.urlencoded({ extended: true}));
app.use(express.json());
app.use(session({ secret: 'secret key', resave: false, saveUnintialized: true}));
app.use(express.static(path.join(__dirname, 'public')));
// Middleware untuk sesi
app.use(
    session({
      secret: 'your_secret_key',
      resave: false,
      saveUninitialized: false, // Tambahkan ini untuk menghilangkan peringatan
    })
  );
  
//set view engine
app.set('view engine', 'ejs');

//routes
app.use('/', require('./routes/users')); //untuk login, register, edit user
app.use('/kegiatan', require('./routes/kegiatan'));
app.use('/pembimbing', require('./routes/pembimbing'));
app.use('/siswa', require('./routes/siswa'));
app.use('/jadwal', require('./routes/jadwal'));

//landing page
app.get('/', (req, res) => {
    res.render('index');
});

//server 
app.listen (PORT, () => {
    console.log(`Server running on port ${PORT}`);
});
